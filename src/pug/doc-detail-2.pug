extends common/doc-layout.pug

block main
  .doc-detail
    header.docs-header
      .doc-container
        .header-container
          a.logo(href='#')
            img(src='./images/doc/logo.png')
          form.search
            input(type='text', autocomplete='off', placeholder='Search for answers...')
            button(type='submit')

    section.docs-list
